{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OpenUsage",
  "version": "0.6.8",
  "identifier": "com.sunstory.openusage",
  "build": {
    "beforeDevCommand": "npm run bundle:plugins && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run bundle:plugins && npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "OpenUsage",
        "width": 400,
        "height": 500,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "width": 660,
          "height": 400
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/bundled_plugins/**/*",
      "icons/tray-icon.png"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY0REE4QjY4NTRGNDZCNUEKUldSYWEvUlVhSXZhOUx2eG5UTEZVbXY3Mnk5RVBOTCs1U1N0MURiaWE5em9ITFovblVNak1OcS8K",
      "endpoints": [
        "https://github.com/robinebers/openusage/releases/latest/download/latest.json"
      ]
    }
  }
}
